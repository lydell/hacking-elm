module Slides.Normalize exposing (view)

import Html exposing (Html)
import StringDebug exposing (debug)


view : List (Html msg)
view =
    [ Html.p [] [ Html.text <| debug <| normalize "Å" ]
    ]


normalize : String -> String
normalize string =
    String.toUpper string



